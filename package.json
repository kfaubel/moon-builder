    "clean": "shx rm -rf build/*",
    "test": "npm run build && node app.js",
    "start": "npm run build && node app.js",
    "prepare": "npm run build",
    "publish": "echo Published.",
    "install": "echo Installed.",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "eslint"
  },
  "dependencies": {
